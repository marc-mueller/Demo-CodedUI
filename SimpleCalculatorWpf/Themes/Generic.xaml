<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:SimpleCalculatorWpf.Controls">
    
    <Style TargetType="{x:Type ctrl:NumericUpDown}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrl:NumericUpDown}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <DockPanel HorizontalAlignment="Stretch" Width="{TemplateBinding Width}">
                            <StackPanel Orientation="Vertical" DockPanel.Dock="Right">
                                <Button x:Name="btnUp" Width="20px" Height="12.5px" FontSize="5px">Up</Button>
                                <Button x:Name="btnDown" Width="20px" Height="12.5px" FontSize="5px">Down</Button>
                            </StackPanel>
                            <TextBox x:Name="txtValue" Text="{Binding Value, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" HorizontalAlignment="Stretch" Height="25px" />
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
